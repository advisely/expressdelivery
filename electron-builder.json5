// @see - https://www.electron.build/configuration/configuration
{
  "$schema": "https://raw.githubusercontent.com/electron-userland/electron-builder/master/packages/app-builder-lib/scheme.json",
  "appId": "com.expressdelivery.client",
  "asar": true,
  "asarUnpack": [
    "node_modules/better-sqlite3/**/*"
  ],
  "productName": "ExpressDelivery",
  "directories": {
    "output": "release/${version}"
  },
  "files": [
    "dist",
    "dist-electron",
    "node_modules/**/*"
  ],
  "mac": {
    "icon": "build/icon@2x.png",
    "target": [
      "dmg"
    ],
    "artifactName": "${productName}-Mac-${version}-Installer.${ext}",
    // Code signing: set CSC_LINK, CSC_KEY_PASSWORD, APPLE_ID, APPLE_APP_SPECIFIC_PASSWORD for notarization
    "hardenedRuntime": true,
    "gatekeeperAssess": false
  },
  "win": {
    "icon": "build/icon.ico",
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}-Windows-${version}-Setup.${ext}",
    // Code signing: set CSC_LINK (path to .pfx) and CSC_KEY_PASSWORD env vars to enable
    "signAndEditExecutable": true
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  },
  "linux": {
    "icon": "build/icon.png",
    "target": [
      "AppImage",
      "deb",
      "rpm"
    ],
    "artifactName": "${productName}-Linux-${version}.${ext}",
    "category": "Network;Email"
  },
  "deb": {
    "depends": ["libnotify4", "libsecret-1-0"]
  },
  "publish": {
    "provider": "github",
    "owner": "expressdelivery",
    "repo": "expressdelivery",
    "releaseType": "release"
  },
  "npmRebuild": true,
  "buildDependenciesFromSource": false
}
